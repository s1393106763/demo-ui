{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@demo-ui/tokens": ["../../packages/tokens/src/index.ts"],
      "@demo-ui/react": ["../../packages/react/src/index.ts"],
      "@demo-ui/vue": ["../../packages/vue/src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}
